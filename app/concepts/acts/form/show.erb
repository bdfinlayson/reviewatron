<%= form_for model do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <values class='control-group'>
    <label for='values'>
    <select id='values' multiple class='selectize' placeholder='Find core values...'>
      <% qualities.each do |v| %>
        <option selected value='<%= v.id %>'><%= v.assertion %></option>
      <% end %>
      <option value=''></option>
      <% unselected_qualities.each do |v| %>
        <option value='<%= v.id %>'><%= v.assertion %></option>
      <% end %>
    </select>
  </values>


  <%= f.submit %>
<% end %>
