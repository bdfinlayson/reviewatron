<%= form_for model do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Briefly describe your act" %>
  <values class='control-group'>
    <label for='values'>
    <select name="act[qualities][]" id='values' multiple class='selectize' placeholder='Find core values...'>
      <% qualities.each do |q| %>
        <option selected value='<%= q.id %>'><%= q.assertion %></option>
      <% end %>
      <option value=''></option>
      <% unselected_qualities.each do |q| %>
        <option value='<%= q.id %>'><%= quality_assertion(q) %></option>
      <% end %>
    </select>
  </values>
  <problemsolution>
    <addchallenge>+ Add Challenge</addchallenge>
  </problemsolution>
  <benefit>
    <addbenefit>+ Add Benefit</addbenefit>
  </benefit>


  <%= f.submit %>
<% end %>
