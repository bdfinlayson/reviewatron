<%= form_for model do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <values class='control-group'>
    <label for='values'>
    <select id='values' multiple class='selectize' placeholder='Find core values...'>
      <% qualities.each do |q| %>
        <option selected value='<%= q.id %>'><%= q.assertion %></option>
      <% end %>
      <option value=''></option>
      <% unselected_qualities.each do |q| %>
        <option value='<%= q.id %>'><%= quality_assertion(q) %></option>
      <% end %>
    </select>
  </values>


  <%= f.submit %>
<% end %>
