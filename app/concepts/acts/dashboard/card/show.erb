<div class='act-wrapper'>
  <div class='act-info'>
    <div class="expander">
      <a href="javascript:void(0)" class="expander-trigger expander-hidden"><%= description %></a>
      <div class="expander-content">
        <%= cell('previews/cell/index', model) %>
      </div>
    </div>
  </div>
  <div class='act-actions'>
    <div class='edit-act'>
      <%= link_to "Edit", edit_act_path(model) %>
    </div>
  </div>
</div>
